<div class="form-row mb-3">
  <label class="form-label" for="name">Name</label>
  <input class="form-control" type="text" name="name" id="name" placeholder="Enter name" value="{{userRecord.name}}"
    required>
</div>
<div class="form-row mb-3">
  <label class="form-label" for="date">日期</label>
  <input class="form-control" type="date" name="date" id="openingHours" placeholder="Enter date"
    value="{{dateFormat userRecord.date "YYYY-MM-DD" }}" required>
</div>
<div class="form-row mb-3">
  <label class="form-label" for="categoryId">Category</label>
  <select class="form-control" id="categoryId" name="categoryId">
    {{#each categories}}
    <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  </select>
</div>
<div class="form-row mb-3">
  <label class="form-label" for="tel">Amount</label>
  <input class="form-control" type="text" name="amount" id="amount" placeholder="Enter amount" value="{{userRecord.amount}}" required>
</div>
<button type="submit" class="btn btn-outline-warning">Submit</button>
<a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>